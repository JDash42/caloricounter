<p id="notice"><%= notice %></p>


<div class="container">  
  <div class="block">
    <div class="card">
      
      <p>
        <strong>Activity:</strong>
        <%= @activity.description %>
      </p>
      
      <p>
        <% if @activity.burnt %>
          <strong>Burnt Calories:</strong>
        <% else %>
          <strong>Ingested Calories:</strong>
        <% end %>
        <%= @activity.number_calories %>
      </p>
      
      <p>
        <strong>Date:</strong>
        <%= @activity.date %>
      </p>
      
      <%= link_to 'Edit', edit_activity_path %> |
      <%= link_to 'Back', activities_path %>

    </div>
  </div>
</div>