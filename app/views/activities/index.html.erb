<%= will_paginate %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Number of calories</th>
      <th>Burnt?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <% if current_user%>
          <td><%= activity.date %></td>
          <td><%= activity.number_calories %></td>
          <% if activity.burnt %>
            <td>Burnt</td>
          <% else %>
            <td>Ingested</td>
          <% end %>
          <td><%= link_to 'Show', activity %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>
<% if current_user%>
  <%= link_to 'New activity', new_activity_path %>
  <br>
  <%= link_to 'Graph placeholder', new_activity_path %>
<% end %>

