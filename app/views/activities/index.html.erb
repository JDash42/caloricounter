<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Number of calories</th>
      <th>Ingest or Burn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <% if current_user%>
          <td><%= activity.date %></td>
          <td><%= activity.number_calories %></td>
          <td><%= activity.ingest_or_burn %></td>
          <td><%= link_to 'Show', activity %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user%>
  <%= link_to 'New activity', new_activity_path %>
<% end %>